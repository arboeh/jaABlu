{
  "name": "jaablu-tests",
  "version": "1.3.1",
  "description": "Unit tests for jaABlu Shelly script",
  "scripts": {
    "test": "mocha test/**/*.test.js",
    "test:watch": "mocha test/**/*.test.js --watch",
    "coverage": "nyc --reporter=lcov --reporter=text mocha test/**/*.test.js"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "nyc": "^15.1.0"
  },
  "nyc": {
    "include": [
      "jaABlu-core.js"
    ],
    "exclude": [
      "test/**",
      "node_modules/**",
      "jaABlu.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "all": true,
    "check-coverage": false
  }
}
